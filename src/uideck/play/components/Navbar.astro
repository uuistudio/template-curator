---
import NavItem from './NavItem.astro'
let {menu} = Astro.props
menu = [
  {'text': 'Home', href: '/'},
  {'text': 'About', href: '#about'},
  {'text': 'Pricing', href: '#pricing'},
  {'text': 'Team', href: '#team'},
  {'text': 'Contact', href: '#contact'},
  {'text': 'Pages', items: [
    {text: 'About Page', href: '/about'},
    {text: 'Pricing Page', href: '/pricing'},
    {text: 'Contact Page', href: '/contact'},
    {text: 'Blog Page', href: '/blog'},
    {text: 'Article Page', href: '/article'},
    {text: 'Sign In Page', href: '/signin'},
    {text: 'Sign Up Page', href: '/signup'},
    {text: '404 Page', href: '/404'}
  ]},
]
---
<div
  class="
    ud-header
    bg-transparent
    absolute
    top-0
    left-0
    z-40
    w-full
    flex
    items-center
  "
>
  <div class="container">
    <div class="flex -mx-4 items-center justify-between relative">
      <div class="px-4 w-70 max-w-full">
        <a href="/" class="navbar-logo w-full block py-5">
          <slot name="logo">
            <img
              src="/assets/images/logo/logo-white.svg"
              alt="logo"
              class="w-full header-logo"
            />
          </slot>
        </a>
      </div>
      <div class="flex px-4 justify-between items-center w-full">
        <div>
          <button
            id="navbarToggler"
            class="
              block
              absolute
              right-4
              top-1/2
              -translate-y-1/2
              lg:hidden
              focus:ring-2
              ring-primary
              px-3
              py-[6px]
              rounded-lg
            "
          >
            <span
              class="relative w-[30px] h-[2px] my-[6px] block bg-white"
            ></span>
            <span
              class="relative w-[30px] h-[2px] my-[6px] block bg-white"
            ></span>
            <span
              class="relative w-[30px] h-[2px] my-[6px] block bg-white"
            ></span>
          </button>
          <nav
            id="navbarCollapse"
            class="
              absolute
              py-5
              lg:py-0 lg:px-4
              xl:px-6
              bg-white
              lg:bg-transparent
              shadow-lg
              rounded-lg
              max-w-[250px]
              w-full
              lg:max-w-full lg:w-full
              right-4
              top-full
              hidden
              lg:block lg:static lg:shadow-none
            "
          >
            <ul class="block lg:flex">
            {menu && menu.map(item => 
              <NavItem {item} /> 
            )}
            </ul>
          </nav>
        </div>
        <div class="sm:flex justify-end hidden pr-16 lg:pr-0">
          <a
            href="signin"
            class="
              text-base
              font-medium
              text-white
              hover:opacity-70
              py-3
              px-7
              loginBtn
            "
          >
            Sign In
          </a>
          <a
            href="signup"
            class="
              text-base
              font-medium
              text-white
              bg-white bg-opacity-20
              rounded-lg
              py-3
              px-6
              hover:bg-opacity-100 hover:text-dark
              signUpBtn
              duration-300
              ease-in-out
            "
          >
            Sign Up
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
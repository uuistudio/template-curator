---
import { Icon } from 'astro-icon'
import defaultData from "./features.json"
let {features} = Astro.props
if(!features){
  features = defaultData
  console.log("using default features")
}
---
<section class="pt-20 lg:pt-[120px] pb-8 lg:pb-[70px]">
  <div class="container">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="mb-12 lg:mb-20 max-w-[620px]">
          <span class="font-semibold text-lg text-primary mb-2 block">
            {features.title}
          </span>
          <h2
            class="
              font-bold
              text-3xl
              sm:text-4xl
              md:text-[42px]
              text-dark
              mb-4
            "
          >
            {features.heading}
          </h2>
          <p
            class="
              text-lg
              sm:text-xl
              leading-relaxed
              sm:leading-relaxed
              text-body-color
            "
          >
            {features.text}
          </p>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap -mx-4">
    { features.items.map(item =>
      <div class="w-full md:w-1/2 lg:w-1/4 px-4">
        <div class="bg-white mb-12 group wow fadeInUp" data-wow-delay=".1s">
          <div
            class="
              w-[70px]
              h-[70px]
              flex
              items-center
              justify-center
              bg-primary
              rounded-2xl
              mb-8
              relative
              z-10
            "
          >
            <span
              class="
                w-[70px]
                h-[70px]
                flex
                items-center
                justify-center
                bg-primary bg-opacity-20
                rounded-2xl
                mb-8
                absolute
                z-[-1]
                top-0
                left-0
                rotate-[25deg]
                group-hover:rotate-45
                duration-300
              "
            ></span>
            <Icon class="text-blue-300" size="33" name={item.icon} />
          </div>
          <h4 class="font-bold text-xl text-dark mb-3">
            {item.heading}
          </h4>
          <p class="text-body-color mb-8 lg:mb-11">
            {item.text}
          </p>
          <a
            href="javascript:void(0)"
            class="font-medium text-base text-body-color hover:text-primary"
          >
            {item.link.text}
          </a>
        </div>
      </div>
    )}
    </div>
  </div>
</section>